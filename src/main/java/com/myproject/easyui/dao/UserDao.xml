<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC   
   "-//mybatis.org//DTD Mapper 3.0//EN"  
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myproject.easyui.dao.UserDao">
	<resultMap type="user" id="userModel">
		<id column="id" property="id"/>
		<result column="password" property="password"/>
		<result column="username" property="username"/>
		<result column="email" property="email"/>
		<result column="realname" property="realname"/>
		<result column="mobile_number" property="mobileNumber"/>
		<result column="register_time" property="registerTime"/>
		<result column="ipsAcctNo" property="ipsIdentification"/>
		<result column="status" property="status"/>
	</resultMap>
	
	<select id="getUser" resultMap="userModel">
		select * from user
		<where> 
			<if test="id != null">
				id = #{id}
			</if>
			<if test="username != null">
				AND username = #{username}
			</if>
			<if test="password != null">
				AND password = #{password}
			</if>
		</where>
	</select>
	
	<delete id="deleteUser">
		delete from user where id = #{id}
	</delete>
	
	<select id="getUserList" resultMap="userModel">
		select * from user
		<where> 
			<if test="id != null">id = #{id}</if>
			<if test="username != null">AND username = #{username}</if>
			<if test="password != null">AND password = #{password}</if>
		</where>
	</select>
	<insert id="addUser" >
		   insert into user(id,username,email,password,register_time,status) values(#{id},#{username},#{email},#{password},#{registerTime},#{status})
	</insert>
	<update id="updateUser">
			update user set username=#{username},email=#{email} where id = #{id}
<!-- 			update user set (id,username,mobile_number,password,register_time,status) values(#{id},#{username},#{mobileNumber},#{password},#{registerTime},#{status}) where id = #{id} -->
	</update>
</mapper>  